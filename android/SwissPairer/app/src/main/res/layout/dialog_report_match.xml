<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/player_one_layout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/player_one_name"
            style="@style/SwissText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="Player one" />

        <TextView
            android:id="@+id/player_one_wins_label"
            style="@style/SwissText"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:gravity="center_vertical"
            android:text="Wins" />

        <Spinner
            android:id="@+id/player_one_wins_spinner"
            style="@style/SwissText"
            android:layout_width="96dp"
            android:layout_height="48dp"
            android:entries="@array/wins_options" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/draws_layout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">

        <TextView
            style="@style/SwissText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|right"
            android:text="Draws" />

        <Spinner
            android:id="@+id/draws_spinner"
            style="@style/SwissText"
            android:layout_width="96dp"
            android:layout_height="48dp"
            android:entries="@array/wins_options" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/player_two_name"
            style="@style/SwissText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="Player two" />

        <TextView
            android:id="@+id/player_two_wins_label"
            style="@style/SwissText"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:gravity="center_vertical"
            android:text="Wins" />

        <Spinner
            android:id="@+id/player_two_wins_spinner"
            style="@style/SwissText"
            android:layout_width="96dp"
            android:layout_height="48dp"
            android:entries="@array/wins_options" />


    </LinearLayout>


</LinearLayout>